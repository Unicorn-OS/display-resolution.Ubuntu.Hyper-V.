---

- name: debug
  ansible.builtin.debug:
    msg: 'Hello world! from {{ inventory_hostname }}'

- name: if old Grub
  ansible.builtin.replace:
    path: /etc/default/grub
    regexp: 'video=hyperv_fb:*"'
    replace: 'video=hyperv_fb:1920x1080"'
  become: true
  notify: Update Grub

- name: Grub cmdline_linux_default
  ansible.builtin.replace:
    path: /etc/default/grub
    regexp: '"quiet splash"'
    replace: '"quiet splash video=hyperv_fb:3840x2160"'
  become: true
  notify: Update Grub
